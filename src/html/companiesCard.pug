include /html/tag

mixin companiesCard(header, text, tag)
    .companiesCard.swiper-slide(style= "max-width: 390px; width: 100%;")
        .companiesCard__container
            .companiesCard__header
                .companiesCard__header__logo
                    img(src=`@img/${header.logo}`, alt="logo")
                p.companiesCard__header__title= header.title
            p.companiesCard__content__text= text
            +tag(tag.text, tag.color)